@{
    ViewData["Title"] = "Books";
}

@model BooksViewModel

<h1>Professor Hilton's Bookstore</h1>

@foreach (Book b in Model.Books)
{
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                @b.Title
                <span class="badge badge-pill badge-primary" style="float:right">
                    <small>$@b.Price</small>
                </span>
            </h4>
        </div>
        <div class="card-text p-1">
            <ul>
                <li>Author: @b.Author</li>
                <li>Publisher: @b.Publisher</li>
                <li>ISBN: @b.Isbn</li>
                <li>Classification/Category: @b.Classification/@b.Category</li>
                <li>Number of Pages: @b.PageCount</li>
            </ul>
        </div>
    </div>
    <br />
}

<div page-book="@Model.PageInfo"></div>